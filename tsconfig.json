{
    "compilerOptions": {
        "target": "ES2021",
        "module":"CommonJS",
        "incremental": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "dist",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "jsxFactory": "XNode.create",
        "lib": [
            "ES2018",
            "ES2021.WeakRef",
            "esnext.disposable",
            "ES2021.String",
            "ES2022.Object"
        ]
    },
    "include": [
        "src/**/*"
   ],
    "exclude": [
		"node_modules",
		"tests"
    ]
}